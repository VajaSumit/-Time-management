@page
@model LoginModel
@{
    Layout = "LoginLayout";
}

<div class="row">
    <div class="col-md-4 offset-md-7 col-sm-6 offset-sm-6">
        <div class="form-wrapper align-items-center">
            <div class="form sign-in mt-4">
                <form id="account" method="post">
                    <h2>Login</h2>
                    <hr />
                    <div class="input-group">
                        <i class='bx bxs-user'></i>
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />

                    </div>
                    <div class="input-group">
                        <i class='bx bxs-lock-alt'></i>
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    </div>
                    <div class="align-items-md-start">
                        <div class="checkbox mb-3">
                            <label asp-for="Input.RememberMe" class="form-label">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-sm btn-outline-success">Log in</button>
                    </div>

                    <div>
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                        </p>
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                        </p>
                        <p>
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                        </p>
                    </div>
                    <div asp-validation-summary="All" style="font-size:small" class="text-danger" role="alert"></div>
                </form>
            </div>
        </div>

   

    </div>
</div>

<div class="row content-row">
    <!-- SIGN IN CONTENT -->
    <div class="col  flex-col">
        <div class="text sign-in">
            <h2 class="mt-4">
                Welcome to
                <br /> our user log <br /> website
            </h2>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
